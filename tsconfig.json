{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": { 
      "*": ["types/*"],
     },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "es2015", // NEW
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [      
      "es2017",
      // "esnext.asynciterable",      
      "dom",
      "esnext"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
